#!/usr/bin/env bash

FOLDER="$1"

if [ -z "$FOLDER" ]; then
  echo "Usage: pf <folder>"
  exit 1
fi

FOLDER="$(eval echo "$FOLDER")"

if [ ! -d "$FOLDER" ]; then
  echo "Error: '$FOLDER' is not a directory"
  exit 1
fi

for file in "$FOLDER"/*; do
  [ -f "$file" ] || continue

  echo "// $(basename "$file")"
  cat "$file"
  echo
done
